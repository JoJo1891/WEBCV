{% extends 'base.html.twig' %}

{% block title %}Cv{% endblock %}

{% block body %}
    <h1>Cv</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cv.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cv.name }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('cv_index') }}">back to list</a>

    <a href="{{ path('cv_edit', {'id': cv.id}) }}">edit</a>
    {{ include('cv/_delete_form.html.twig') }}

    <h2>Infos Personnelles</h2>
{% for infos_perso in ips %}
    <p>{{ infos_perso.id}}</p>
    <p>{{ infos_perso.firstname}}</p>
    <p>{{ infos_perso.name}}</p>
    <p>{{ infos_perso.jobtitle}}</p>
    <a href="{{ path('infos_perso_edit', {'id': infos_perso.id,'idcv': cv.id}) }}">edit</a>
    {% else %}
            
                <p>no records found</p>

                <a href="{{ path('infos_perso_new', {'idcv': cv.id}) }}">Create new</a>
            
    {% endfor %}

    <h2>Coordonées</h2>

    {% for contact_information in cis %}
    <p>{{ contact_information.id}}</p>
    <p>{{ contact_information.adresse}}</p>
    <p>{{ contact_information.numero}}</p>
    <p>{{ contact_information.email}}</p>
    <a href="{{ path('contact_information_edit', {'id': contact_information.id,'idcv': cv.id}) }}">edit</a>
    {% else %}
            
                <p>no records found</p>

                <a href="{{ path('contact_information_new', {'idcv': cv.id}) }}">Create new</a>
            
    {% endfor %}

    <h2>Compétences</h2>
    {% for skill in skills %}
            
                <p>{{ skill.id }}</p>
                <p>{{ skill.name }}</p>
                
                    
                    <a href="{{ path('skills_edit', {'id': skill.id,'idcv': cv.id}) }}">edit</a>
                    <a href="{{ path('skills_new', {'idcv': cv.id}) }}">Add new</a>
             
            
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
                <a href="{{ path('skills_new', {'idcv': cv.id}) }}">Add new</a>
            </tr>
        {% endfor %}

        <h2>Parcours Professionnel</h2>
        {% for professional_course in professional_courses %}
                <p>{{ professional_course.id }}</p>
                <p>{{ professional_course.title }}</p>
                <p>{{ professional_course.city }}</p>
                <p>{{ professional_course.period }}</p>
                <p>{{ professional_course.skillsacquired }}</p>
                <p>{{ professional_course.description }}</p>
                <p>
                    <a href="{{ path('professional_course_edit', {'id': professional_course.id,'idcv': cv.id}) }}">edit</a>
                    <a href="{{ path('professional_course_new', {'idcv': cv.id}) }}">Add new</a>
                </p>
        {% else %}
                <p>no records found</p>
                <a href="{{ path('professional_course_new', {'idcv': cv.id}) }}">Add new</a>
        {% endfor %}

        <h2>Formations</h2>
        {% for training in trainings %}
                <p>{{ training.id }}</p>
                <p>{{ training.diplomatitle }}</p>
                <p>{{ training.school }}</p>
                <p>{{ training.city }}</p>
                <p>{{ training.yearofgraduation }}</p>
                <p>
                    <a href="{{ path('training_edit', {'id': training.id,'idcv': cv.id}) }}">edit</a>
                    <a href="{{ path('training_new', {'idcv': cv.id}) }}">Add new</a>
                </p>
        {% else %}
                <p>no records found</p>
                <a href="{{ path('training_new', {'idcv': cv.id}) }}">Add new</a>
        {% endfor %}
    

    
{% endblock %}
