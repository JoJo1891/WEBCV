<form method="post" action="{{ path('contact_information_delete', {'id': contact_information.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact_information.id) }}">
    <button class="btn">Delete</button>
</form>
