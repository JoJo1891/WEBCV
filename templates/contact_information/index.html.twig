{% extends 'base.html.twig' %}

{% block title %}ContactInformation index{% endblock %}

{% block body %}
    <h1>ContactInformation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Numero</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact_information in contact_informations %}
            <tr>
                <td>{{ contact_information.id }}</td>
                <td>{{ contact_information.adresse }}</td>
                <td>{{ contact_information.numero }}</td>
                <td>{{ contact_information.email }}</td>
                <td>
                    <a href="{{ path('contact_information_show', {'id': contact_information.id}) }}">show</a>
                    <a href="{{ path('contact_information_edit', {'id': contact_information.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_information_new') }}">Create new</a>
{% endblock %}
